@model CreateImageViewModel

@{
    ViewData["Title"] = "Upload Image";
}

<div class="row d-flex align-items-center justify-content-center mt-5">
    <div class="col-6 border rounded">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <section class="mb-2 mt-1">
            <form asp-action="CreateImage" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.File" class="control-label"></label>
                    <input asp-for="@Model.File" accept="image/*" />
                    <span asp-validation-for="@Model.File" class="text-danger"></span>
                </div>
                <div class="row mt-5">
                    <div class="col-4">
                        <a asp-action="ChangeImage" asp-route-id="@User?.Identity?.Name" class=" btn btn-dark mb-2">Back to List</a>
                    </div>
                    <div class="col-8 d-flex align-items-center justify-content-end">
                        <input type="submit" value="Create" class="btn btn-dark col-6" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }