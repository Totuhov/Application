@using Application.Data.Models

@model ChangeProjectImageViewModel

<h1 class="text-center">Images</h1>
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="row mt-5">
            <div class="col-6 d-flex align-items-center justify-content-start">
                <a asp-action="All" asp-route-id="@User?.Identity?.Name" class=" btn btn-dark mb-2 shadow-none">Back to List</a>
            </div>
            <div class="col-6 d-flex align-items-center justify-content-end">
                <a asp-action="CreateImage" class="btn btn-outline-dark">Upload New Image</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Preview</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var image in Model.Images)
                {
                    <form asp-action="ChangeImage" method="post">
                        <input type="hidden" asp-for="ProjectId" />
                    <tr>
                        <td>
                            <img src="data:@image.ContentType;base64,@image.ImageData" alt="Image" asp-append-version="true" width="50px" height="50px">
                        </td>
                        <td>
                                @{
                                    Model.ImageId = image.ImageId;
                                }
                            <input type="hidden" asp-for="ImageId" />
                            <input class="btn btn-outline-dark" type="submit" value="Use" />
                        </td>
                    </tr>
                    </form>
                }
            </tbody>
        </table>
    </div>
</div>